# ===========================================
# Bagel Shop Environment Variables
# Copy this file to .env and fill in your values
# ===========================================

# Docker Registry (for production)
REGISTRY=us-central1-docker.pkg.dev/mybagel-458109/bagel-repo
TAG=latest

# ===========================================
# Sensitive Credentials
# ===========================================

# ShopLine API
SHOPLINE_TOKEN=your_shopline_token_here

# Gmail IMAP
GMAIL_ADDRESS=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_app_password_here

# LINE Bot
LINE_ACCESS_TOKEN=your_line_access_token_here
LINE_GROUP_ID=your_line_group_id_here

# LINE Channel (未使用，保留給未來)
# LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
# LINE_CHANNEL_SECRET=your_line_channel_secret_here

# Supabase (Inventory Database)
# SUPABASE_URL: REST API URL for Supabase Python client
# Format: https://<project-ref>.supabase.co
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here

# Database Connection (for migrations and direct PostgreSQL access)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@db.your-project-ref.supabase.co:5432/postgres

# ===========================================
# Inventory System Authentication
# ===========================================
# Password for inventory page access
INVENTORY_PASSWORD=37239421


# ===========================================
# GitHub Actions Only (not needed locally)
# ===========================================
# GCP_SA_KEY=<base64 encoded service account JSON>
